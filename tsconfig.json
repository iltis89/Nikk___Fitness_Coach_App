{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@nv/shared/*": ["packages/shared/src/*"],
      "@nv/ui/*": ["packages/ui/src/*"],
      "@nv/api/*": ["packages/api/src/*"],
      "@nv/database/*": ["packages/database/src/*"],
      "@nv/ai-services/*": ["packages/ai-services/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", ".expo"],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/ui" },
    { "path": "./packages/api" },
    { "path": "./packages/database" },
    { "path": "./packages/ai-services" },
    { "path": "./apps/trainer-dashboard" },
    { "path": "./apps/mobile-app" }
  ]
}